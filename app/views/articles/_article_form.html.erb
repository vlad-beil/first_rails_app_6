<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li>
      <%= msg %>
    </li>
  <% end %>
</ul>

<% end %> <%= form_with(model: @article, local: true) do |f| %>

    <p>
        <%= f.label :title %> 
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :author %> 
        <%= f.text_field :author%>
    </p>
    <p>
        <%= f.label :description %> 
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit%>
    </p>

<% end %>

