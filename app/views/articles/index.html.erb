<h1>Articles Page</h1>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Author</td>
      <td>Description</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |ar| %>
    <tr>
      <td><%= ar.title %></td>
      <td><%= ar.author %></td>
      <td><%= ar.description %></td>
      <td>
        <%= link_to "Show", article_path(ar) %>
        <%= link_to "Edit", edit_article_path(ar) %>
        <%= link_to "Delete", article_path(ar), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

<br/>
<%= link_to "Create a new article", new_article_path %>
